<div class="homeContainer">
    <h1>Home Page:</h1>





    <div class="create-event">
        <form class="form-create-event" id="create-event-form" name="create-event" method="POST" action="/api/events">       
            <h2 class="form-event-heading">Input Event Information</h2>
            <label for="event_name"><h5>What is the name of the event you will be hosting?</h5></label>
            <input type="text" class="form-control" id="event_name" name="event-name" placeholder="Name of Event" required="" autofocus="" />
            
            <label for="type-Event"><h5>What is the date of the event?</h5></label>
            <input type="date" class="form-control" id="date" name="date" placeholder="Date" required="" autofocus="" />
            
            <label for="type-Event"><h5>What is the location of the event?</h5></label>
            <input type="text" class="form-control" id="location" name="location" placeholder="Location" required="" autofocus="" />

            <label for="type-Event"><h5>What is the start time of the event?</h5></label>
            <input type="time" class="form-control" id="start-time" name="time" placeholder="Start Time" required="" autofocus="" />

            <label for="type-Event"><h5>What is the end time of the event?</h5></label>
            <input type="time" class="form-control" id="end-time" placeholder="End Time" required="" autofocus="" />
     
            <button class="btn btn-lg btn-primary btn-block" type="submit" id="create-event-form">Submit Event</button>   
        </form>
    </div>


    <div class="listevents">
        <h1>Events:</h1>
        {{#each events}}
        <div>
            <ul>
                <h2>{{event_name}}</h2>
                <button class="btn btn-success gobtn" data-id="{{this.id}}">GO</button>
            </ul>
        </div>
        {{/each}}
    </div>



</div>





            